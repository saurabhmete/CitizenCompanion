        <Button
            android:id="@+id/navButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:background="#5fd5d7"
            android:drawableStart="@drawable/ic_navigation"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:text="Navigate"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.069"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phoneNumberValue" />

        <Button
            android:id="@+id/downladbleContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:background="#5fd5d7"
            android:drawableLeft="@drawable/ic_cloud_download"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:text="Downloads"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.866"
            app:layout_constraintStart_toEndOf="@+id/navButton"
            app:layout_constraintTop_toBottomOf="@+id/phoneNumberValue" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>